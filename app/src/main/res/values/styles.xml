<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SmoothBottomSheetDialogAnimation" parent="@style/Animation.Design.BottomSheetDialog">
        <item name="android:windowEnterTransition">@transition/bsd_enter</item>
        <item name="android:windowExitTransition">@transition/bsd_exit</item>
    </style>
    <style name="MyRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/rb_checker</item>
    </style>
    <style name="BottomSheetDialogKeyboardTheme" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="shapeAppearanceOverlay">@style/ShapeBottomSheetDialogKeyboard</item>
    </style>
    <style name="ShapeBottomSheetDialogKeyboard" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
    <declare-styleable name="TimelineView">
        <attr name="left_thumb_color" format="color"/>
        <attr name="progress_thumb_color" format="color"/>
        <attr name="right_thumb_color" format="color"/>
        <attr name="thumb_width" format="dimension"/>
        <attr name="thumb_dimension" format="float"/>
    </declare-styleable>
</resources>